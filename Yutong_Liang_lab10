<script>
    function calGPA(){
       var grade1=document.getElementById('informationrmation1').value;
       var grade2=document.getElementById('informationrmation2').value;
       var grade3=document.getElementById('informationrmation3').value;
       var grade4=document.getElementById('informationrmation4').value;
    var grade5=document.getElementById('informationrmation5').value;
  
      
 
    var temp1=parseInt(grade1);
    var temp2=parseInt(grade2);
    var temp3=parseInt(grade3);
    var temp4=parseInt(grade4);
    var temp5=parseInt(grade5);
 
    var total;
       var average=0;
 
 
    var arry = [temp1,temp2,temp3,temp4,temp5];
  
 
    //to write down the title
    $("#modal-title").text("Your Final Grade:");
 
       if(grade1 !="" && grade2 !="" && grade3 !="" && grade4 !=""&& grade5 !=""){
              for(var i = 0; i < arry.length; i++){
                      average += arry[i];      
                  }
 
                 
              total=average/arry.length;
 
                 
              total=average/arry.length;
 
              document.getElementById("content").innerHTML = "You entered the following informationrmationrmation into the form: " + total;
        if(total>=90){
            document.getElementById("content").innerHTML = "You entered the following informationrmationrmation into the form: " + total + "<br>"+ "<br>"+ "<br>" + "<br>" +"Based on this overall score, your letter grade will be: A+";
        }else if(total<=89 && total>=85){
            document.getElementById("content").innerHTML = "You entered the following informationrmationrmation into the form: " + total + "<br>"+ "<br>"+ "<br>" + "<br>" +"Based on this overall score, your letter grade will be: A";
        }else if(total<=84 && total>=80){
            document.getElementById("content").innerHTML = "You entered the following informationrmationrmation into the form: " + total + "<br>"+ "<br>"+ "<br>" + "<br>" +"Based on this overall score, your letter grade will be: A-";
        }else if(total<=79 && total>=76){
            document.getElementById("content").innerHTML = "You entered the following informationrmationrmation into the form: " + total + "<br>"+ "<br>"+ "<br>" + "<br>" +"Based on this overall score, your letter grade will be: B+";
        }else if(total<=75 && total>=72){
            document.getElementById("content").innerHTML = "You entered the following informationrmationrmation into the form: " + total + "<br>"+ "<br>"+ "<br>" + "<br>" +"Based on this overall score, your letter grade will be: B";
        }else if(total<=71 && total>=68){
            document.getElementById("content").innerHTML = "You entered the following informationrmationrmation into the form: " + total + "<br>"+ "<br>"+ "<br>" + "<br>" +"Based on this overall score, your letter grade will be: B-";
        }else if(total<=67 && total>=64){
            document.getElementById("content").innerHTML = "You entered the following informationrmationrmation into the form: " + total + "<br>"+ "<br>"+ "<br>" + "<br>" +"Based on this overall score, your letter grade will be: C+";
        }else if(total<=63 && total>=60){
            document.getElementById("content").innerHTML = "You entered the following informationrmationrmation into the form: " + total + "<br>"+ "<br>"+ "<br>" + "<br>" +"Based on this overall score, your letter grade will be: C";
        }else if(total<=59 && total>=55){
            document.getElementById("content").innerHTML = "You entered the following informationrmationrmation into the form: " + total + "<br>"+ "<br>"+ "<br>" + "<br>" +"Based on this overall score, your letter grade will be: C-";
        }else if(total<=54 && total>=50){
            document.getElementById("content").innerHTML = "You entered the following informationrmationrmation into the form: " + total + "<br>"+ "<br>"+ "<br>" + "<br>" +"Based on this overall score, your letter grade will be: D";
        }else{
            document.getElementById("content").innerHTML = "You entered the following informationrmationrmation into the form: " + total + "<br>"+ "<br>"+ "<br>" + "<br>" +"Based on this overall score, your letter grade will be: F";
        }
       }
 
    }
    function adjusted(){
